                    <Button Margin="5 5 5 5" Width="100" Height="50"></Button>
                    <Button Margin="5 5 5 5" Width="100" Height="50"></Button>
                    <Button Margin="5 5 5 5" Width="100" Height="50"></Button>
                    <Button Margin="5 5 5 5" Width="100" Height="50"></Button>
                    <Button Margin="5 5 5 5" Width="100" Height="50"></Button>
                    <Button Margin="5 5 5 5" Width="100" Height="50"></Button>
                    <Button Margin="5 5 5 5" Width="100" Height="50"></Button>
                    <Button Margin="5 5 5 5" Width="100" Height="50"></Button>
                    <Button Margin="5 5 5 5" Width="100" Height="50"></Button>
