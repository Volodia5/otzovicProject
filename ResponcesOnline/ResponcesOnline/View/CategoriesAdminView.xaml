        <Button Margin="0 80 45 0" Height="30" Width="100" VerticalAlignment="Top" HorizontalAlignment="Right">Создать товар</Button>

        <StackPanel Height="325" VerticalAlignment="Bottom">

            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" >
                <WrapPanel  HorizontalAlignment="Center">
                    <Button Margin="5 5 5 5" Width="100" Height="50"></Button>
                    <Button Margin="5 5 5 5" Width="100" Height="50"></Button>
                    <Button Margin="5 5 5 5" Width="100" Height="50"></Button>
                    <Button Margin="5 5 5 5" Width="100" Height="50"></Button>
